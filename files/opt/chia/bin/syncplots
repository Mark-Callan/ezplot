#!/usr/bin/env bash

while [ 0 ]; do

  for dir in `cat ~/mining/backup`; do
    for dst in `cat ${CHIA_SYNCDST}`; do
      set +e
      echo "[`date`] Backing up ${dir} to ${dst}"
      ezplot uploadplots ${dir} ${dst} || (echo "Sync existed with a non-zero exit code $?" ; sleep 10)
      set -e
    done
    echo "[`date`] Sleeping for 5m"
    sleep 300
  done
done
