export CHIA_CONFIG="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
export CHIA_HOME=`dirname ${CHIA_CONFIG}`
export CHIA_LOGS=${CHIA_LOGS:-/var/log/chia}
export CHIA_PLOTTERS=${CHIA_PLOTTERS:-${CHIA_HOME}/config/plotters}
export CHIA_SYNCSRC=${CHIA_SYNCSRC:-${CHIA_HOME}/config/syncsrc}
export CHIA_SYNCDST=${CHIA_SYNCDST:-${CHIA_HOME}/config/syncdst}
export CHIA_USER=${CHIA_USER:-`whoami`}
